<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link btn btn-link text-dark disabled" href="#">@User.Identity.Name</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-page="/Index" asp-page-handler="Logout" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Index" asp-page-handler="Login">Login</a>
        </li>
    }
</ul>
